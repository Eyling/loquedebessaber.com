<nav class="pagination" role="navigation">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}">&larr; Página anterior</a>
    {{/if}}
    <span class="page-number">Página {{page}} de {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">Página Siguiente &rarr;</a>
    {{/if}}
</nav>
